<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background6"
    tools:context=".QuestionActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="543dp"
        android:layout_height="123dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/idNumPreguntas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/baloo_bhaina"
            android:gravity="center"
            android:padding="8dp"
            android:text="1/10"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/preguntaTextView"
            android:layout_width="507dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="17dp"
            android:fontFamily="@font/baloo_bhaina"
            android:gravity="center"
            android:text="Question"

            android:textColor="@android:color/background_light"
            android:textSize="15dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="459dp"
        android:layout_height="208dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.089">

        <Button
            android:id="@+id/btnOpcion1"
            android:layout_width="300dp"
            android:layout_height="34dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/round_corner"
            android:fontFamily="@font/baloo_bhaina"
            android:text="Opcion1"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnOpcion2"
            android:layout_width="308dp"
            android:layout_height="31dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/round_corner"
            android:fontFamily="@font/baloo_bhaina"
            android:text="Opcion2"
            android:textColor="#F8F6F6"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnOpcion3"
            android:layout_width="305dp"
            android:layout_height="28dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/round_corner"
            android:fontFamily="@font/baloo_bhaina"
            android:text="Opcion3"
            android:textColor="#FFFFFF"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnOpcion4"
            android:layout_width="308dp"
            android:layout_height="28dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/round_corner"
            android:fontFamily="@font/baloo_bhaina"
            android:text="Opcion4"
            android:textColor="#FFFFFF"

            android:textSize="15dp"
            android:textStyle="bold" />



    </LinearLayout>

    <Button
        android:id="@+id/PuntuacionTextView"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:layout_marginVertical="5dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/round_corner2"
        android:fontFamily="@font/baloo_bhaina"
        android:text="0 Pts"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnPistas"
        android:layout_width="145dp"
        android:layout_height="36dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/round_corner3"
        android:fontFamily="@font/baloo_bhaina"
        android:gravity="center"
        android:text="Pistas: 4"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toEndOf="@+id/PuntuacionTextView"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="506dp"
        android:layout_height="73dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/prev_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="15dp"
            android:layout_weight="1"
            android:backgroundTint="@color/verde"
            android:fontFamily="@font/baloo_bhaina"
            android:text="Prev"

            android:textColor="#FFFFFF"
            tools:text="Prev" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="15dp"
            android:layout_weight="1"
            android:backgroundTint="@color/verde"
            android:fontFamily="@font/baloo_bhaina"
            android:text="Next"


            android:textColor="#ffff"
            tools:text="Next" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>